<VirtualHost *:443>
    ServerName ServerName.com
    ServerAdmin admin@ServerName.com
    ServerSignature Off

    ErrorLog /var/www/digitalException/log/secure.error.log
    CustomLog /var/www/digitalException/log/secure.access.log combined
    LogLevel info

    AddHandler wsgi-script .wsg

    WSGIProcessGroup digitalException
    WSGIScriptAlias / /var/www/digitalException/digitalException.wsgi
    WSGIScriptReloading On

    <Directory /var/www/digitalException>
        WSGIProcessGroup digitalException
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
	Require all granted
    </Directory>

    # SSL Stuff
    SSLEngine On
    SSLCertificateFile /etc/ssl/private/ServerName.com.crt
    SSLCertificateKeyFile /etc/ssl/private/ServerName.com.key
    SSLCertificateChainFile /etc/ssl/private/ServerName.crt
    <Location />
            SSLRequireSSL On
            SSLVerifyClient optional
            SSLVerifyDepth 1
            SSLOptions +StdEnvVars +StrictRequire
    </Location>
</VirtualHost>


